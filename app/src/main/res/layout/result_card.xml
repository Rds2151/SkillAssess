<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#242A40">

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="11dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="369dp"
        android:layout_height="540dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#CBDCE6"
        app:cardCornerRadius="65dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/TrophyImg"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/trophy" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TrophyImg"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textSize="40sp"
            android:text="Congrats!"
            android:textColor="@color/black"
            android:textFontWeight="750" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-12dp"
            android:gravity="center"
            android:text="90% Score"
            android:textColor="#43B378"
            android:textFontWeight="650"
            android:textSize="55dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-65dp"
            android:gravity="center"
            android:text="Quiz completed Successfully."
            android:textColor="@color/black"
            android:textFontWeight="800"
            android:textSize="23dp" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="110dp"
            android:gravity="bottom"
            android:text="You attempt 60 questions and from that 55 answer is correct"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ViewResult"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="29dp"
            android:backgroundTint="#7B5DFF"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:text="View Result"
            android:textColor="@color/black"
            android:textSize="23dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>