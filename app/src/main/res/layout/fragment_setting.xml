<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="18dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textFontWeight="750"
        android:letterSpacing="0.02"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:text="Settings" />

    <LinearLayout
        android:id="@+id/forwardBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_color="?attr/theme_color"
            app:civ_border_width="2dp"
            android:background="@drawable/usericon" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/profiletxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="------ ------"
                android:textSize="19sp"
                android:textFontWeight="589"
                style="@style/TextAppearance.AppCompat.Body2"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit personal details"
                android:textFontWeight="500"
                android:textColor="@color/lightgrey"
                android:paddingTop="22dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="#00ffffff"
                android:clickable="false"
                app:srcCompat="@drawable/forward" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leaderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00ffffff"
            app:srcCompat="@drawable/leader" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="Leader Board" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:clickable="false"
            android:backgroundTint="#00ffffff"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/historyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00ffffff"
            app:srcCompat="@drawable/history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="History" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:backgroundTint="#00ffffff"
            android:clickable="false"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="19sp"
        android:layout_marginTop="28dp"
        android:textFontWeight="589"
        style="@style/TextAppearance.AppCompat.Body2"/>

    <LinearLayout
        android:id="@+id/editBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00ffffff"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="Edit Profile" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:backgroundTint="#00ffffff"
            android:clickable="false"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePasswdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00ffffff"
            app:srcCompat="@drawable/lock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="Change Password" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:backgroundTint="#00ffffff"
            android:clickable="false"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/privacyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00ffffff"
            app:srcCompat="@drawable/privacy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="Privacy" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:backgroundTint="#00ffffff"
            android:clickable="false"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textSize="19sp"
        android:layout_marginTop="28dp"
        android:textFontWeight="589"
        style="@style/TextAppearance.AppCompat.Body2"/>

        <LinearLayout
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00ffffff"
                app:srcCompat="@drawable/logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Logout" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:backgroundTint="#00ffffff"
                android:clickable="false"
                app:srcCompat="@drawable/forward" />
        </LinearLayout>

    <TextView
        android:id="@+id/verisonNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/app_version" />

</LinearLayout>
</ScrollView>