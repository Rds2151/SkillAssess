<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile_activity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.49"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingEnd="18dp"
            android:background="@color/profileLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp">

                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="#00ffffff"
                    android:layout_marginBottom="-18dp"
                    android:onClick="goBack"
                    android:clickable="true"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:textFontWeight="750"
                    android:textSize="18sp"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="-11dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="@color/white"
                    android:text="Edit Profile" />

                <TextView
                    android:id="@+id/saveBtn"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:textFontWeight="650"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingEnd="8dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="saveData"
                    android:text="Save" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/editprofileImg"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="72dp"
                    android:background="@drawable/avatar"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:clickable="true"
                    android:layout_alignRight="@+id/editprofileImg"
                    android:layout_alignBottom="@+id/editprofileImg"
                    android:layout_marginBottom="35dp"
                    android:layout_marginRight="-7dp"
                    android:background="@drawable/circle_background"
                    app:srcCompat="@drawable/camera" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:paddingStart="24dp"
                android:layout_marginTop="34dp"
                android:textSize="17sp"
                android:textColor="?attr/theme_color"
                android:text="First Name" />


            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="24dp"
                android:inputType="text"
                android:paddingBottom="15dp"
                android:layout_marginEnd="18dp"
                android:drawableRight="@drawable/baseline_edit_24"
                android:hint="" />

            <TextView
                android:id="@+id/errorFn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="24dp"
                android:textColor="@color/red"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:paddingStart="24dp"
                android:textSize="17sp"
                android:textColor="?attr/theme_color"
                android:text="Last Name" />


            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="24dp"
                android:paddingBottom="15dp"
                android:inputType="textEmailAddress"
                android:drawableRight="@drawable/baseline_edit_24"
                android:layout_marginEnd="18dp"
                android:hint="" />
            <TextView
                android:id="@+id/errorLn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="24dp"
                android:textColor="@color/red"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:paddingStart="24dp"
                android:textSize="17sp"
                android:textColor="?attr/theme_color"
                android:text="Email" />


            <EditText
                android:id="@+id/emailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="24dp"
                android:paddingBottom="15dp"
                android:inputType="textEmailAddress"
                android:drawableRight="@drawable/baseline_email_25"
                android:layout_marginEnd="18dp"
                android:enabled="false"
                android:hint="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="?attr/theme_color"
                    android:text="Gender" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="18dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="Male"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="24dp"
                        android:text="Female"/>
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:paddingStart="24dp"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:textColor="?attr/theme_color"
                android:text="Birth Date" />

            <EditText
                android:id="@+id/birthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginStart="24dp"
                android:paddingBottom="15dp"
                android:layout_marginEnd="18dp"
                android:drawableRight="@drawable/baseline_date_range_24"
                android:inputType="date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="18dp">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:onClick="goBack"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/saveBtnblw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:onClick="saveData"
                    android:clickable="true"
                    android:text="Save" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
