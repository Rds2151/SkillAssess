<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile_activity" >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.49"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingEnd="18dp"
        android:background="@color/profileLayout">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="14dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#00ffffff"
            android:layout_marginBottom="-18dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textFontWeight="750"
            android:textSize="18sp"
            android:letterSpacing="0.02"
            android:layout_marginTop="20dp"
            android:paddingLeft="-11dp"
            android:layout_marginEnd="6dp"
            android:textColor="@color/white"
            android:text="Edit Profile" />

        <TextView
            android:id="@+id/saveBtn"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textFontWeight="650"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save" />
      </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/editprofileImg"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="72dp"

            app:civ_border_color="?attr/theme_color"
            app:civ_border_width="2dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:clickable="true"
            android:layout_alignRight="@+id/editprofileImg"
            android:layout_alignBottom="@+id/editprofileImg"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="-7dp"
            android:background="@drawable/circle_background"
            app:srcCompat="@drawable/camera" />
      </RelativeLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="7dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.AppCompat.Headline"
          android:paddingStart="24dp"
          android:layout_marginTop="34dp"
          android:textSize="17sp"
          android:textColor="@color/lightgrey"
          android:text="First Name" />


      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="24dp"
            android:inputType="text"
            android:paddingBottom="15dp"
            android:layout_marginEnd="18dp"
            android:hint="Hello" />
      </com.google.android.material.textfield.TextInputLayout>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.AppCompat.Headline"
          android:paddingStart="24dp"
          android:layout_marginTop="8dp"
          android:textSize="17sp"
          android:textColor="@color/lightgrey"
          android:text="Last Name" />


      <EditText
          android:id="@+id/lastname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginStart="24dp"
          android:paddingBottom="15dp"
          android:inputType="textEmailAddress"
          android:layout_marginEnd="18dp"
          android:hint="" />

      <TextView
          android:id="@+id/email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.AppCompat.Headline"
          android:paddingStart="24dp"
          android:layout_marginTop="8dp"
          android:textSize="17sp"
          android:textColor="@color/lightgrey"
          android:text="Email" />


      <EditText
          android:id="@+id/editTextText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginStart="24dp"
          android:paddingBottom="15dp"
          android:inputType="textEmailAddress"
          android:layout_marginEnd="18dp"
          android:enabled="false"
          android:hint="" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.AppCompat.Headline"
          android:paddingStart="24dp"
          android:layout_marginTop="8dp"
          android:textSize="17sp"
          android:textColor="@color/lightgrey"
          android:text="Gender" />


      <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="18dp"
          android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Male"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:text="Female"/>
      </RadioGroup>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.AppCompat.Headline"
          android:paddingStart="24dp"
          android:layout_marginTop="8dp"
          android:textSize="17sp"
          android:textColor="@color/lightgrey"
          android:text="Birth Date" />

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/editTextDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginStart="24dp"
          android:paddingBottom="15dp"
          android:layout_marginEnd="18dp"
          android:inputType="date" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="bottom"
          android:layout_gravity="bottom"
          android:orientation="horizontal"
          android:paddingTop="24dp"
          android:paddingBottom="18dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:text="Save" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</ScrollView>